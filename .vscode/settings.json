{
    "python.analysis.autoImportCompletions": false,

    "pylint.args": [
        "--disable=all",
        "--enable=unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode,W0611",
    ],

	"mypy-type-checker.reportingScope": "workspace",

    "python.testing.unittestArgs": [
        "-v",
        "-s",
        ".",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
}
